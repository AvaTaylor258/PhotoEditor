# Ava Taylor
# make text bold

Editor

<Editor>:
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            pos_hint: {"top":1}
            size_hint: 1, .3
            columns: 2
            rows: 4
            TextInput:
                id: selected_image
                hint_text: "Enter image name (e.g. image.png)"
            Button:
                text: "Load Image"
                font_size: 30
                onclick: root.change_image(selected_image.text)
                # func works w/o having to click (???)
            Button:
                text: "Black and White"
                font_size: 30
                background_normal: "button_images/black_and_white.jpg"
                on_press: root.black_and_white(image_display.source)
            Button:
                text: "Inverse"
                font_size: 30
                background_normal: "button_images/inverse.jpeg"
                on_press: root.inverse(image_display.source)
            Button:
                text: "Line Drawing"
                font_size: 30
                background_normal: "button_images/line_drawing.png"
                on_press: root.line_drawing(image_display.source)
            Button:
                text: "Pointillism"
                font_size: 30
                background_normal: "button_images/pointillism.jfif"
                on_press: root.pointillism(image_display.source)
            Button:
                text: "Sepia"
                font_size: 30
                background_normal: "button_images/sepia.jpg"
                on_press: root.sepia(image_display.source)
            Button:
                text: "Pixelate"
                font_size: 30
                background_normal: "button_images/pixelate.jpg"
                on_press: root.pixelate(image_display.source, 170, 40, 120, 110)
        Image:
            id: image_display
            source: ""